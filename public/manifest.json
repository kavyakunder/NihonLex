{
  "manifest_version": 3,
  "version": "1.0",
  "description": "Effortless Japanese learning with letters, words or phrases with every new tab.",
  "short_name": "NihonLex",
  "action": {
    "default_title": "NihonLex",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/nihonlex-favicon.png",
    "32": "icons/nihonlex-favicon.png",
    "64": "icons/nihonlex-favicon.png",
    "128": "icons/nihonlex-favicon.png"
  },
  "name": "NihonLex Chrome extension",
  "permissions": ["activeTab", "tabs", "storage"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
